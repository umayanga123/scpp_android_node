<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="scpp.globaleye.com.scppclient.ui.WalletInfo">

    <include layout="@layout/activity_app_bar"
        android:id="@+id/include2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wallet_info_title"
        android:id="@+id/tvTitle"
        android:layout_marginTop="94dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="#f45e5e"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/coin_rate_lable"
        android:id="@+id/textView2"
        android:layout_marginTop="38dp"
        android:textColor="#090909"
        android:layout_below="@+id/tvTitle"
        android:layout_toLeftOf="@+id/tvTitle"
        android:layout_toStartOf="@+id/tvTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/coin_Value"
        android:id="@+id/tvServiceLocation"
        android:textColor="#090909"
        android:layout_alignTop="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/btCoinTransaction"
        android:layout_below="@+id/tvServiceLocation"
        android:layout_alignLeft="@+id/tvServiceLocation"
        android:layout_alignStart="@+id/tvServiceLocation" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CoinlistView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btCoinTransaction" />

</RelativeLayout>

