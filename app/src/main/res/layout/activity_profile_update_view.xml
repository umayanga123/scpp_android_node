<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center_horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context=".ui.UpdateProfile">

            <include layout="@layout/activity_app_bar"
                android:id="@+id/include"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Reg. User Name"
                android:id="@+id/ruserName_lb"
                android:textSize="20dp"
                android:textStyle="normal"
                android:textAlignment="center"
                android:layout_marginTop="110dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_below="@+id/ruserName_lb"
                android:layout_centerHorizontal="true"
                android:id="@+id/etUpdateUserName" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="password"
                android:id="@+id/passwordlable"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_below="@+id/etUpdateUserName"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etUpdatpasswordtxt"
                android:layout_below="@+id/passwordlable"
                android:layout_centerHorizontal="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Comfirm Password"
                android:id="@+id/cptextView"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_below="@+id/etUpdatpasswordtxt"
                android:layout_centerHorizontal="true" />



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etUPConfirmPasswordeditText"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/cptextView"
                android:layout_alignLeft="@+id/etUpdatpasswordtxt"
                android:layout_alignStart="@+id/etUpdatpasswordtxt"
                android:layout_centerHorizontal="true"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:id="@+id/btUpdateProfile"
                android:layout_below="@+id/etUPConfirmPasswordeditText"
                android:layout_alignLeft="@+id/ruserName_lb"
                android:layout_alignStart="@+id/ruserName_lb"
                android:layout_centerHorizontal="true"/>


    </RelativeLayout>
</ScrollView>
