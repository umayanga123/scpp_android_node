<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context="scpp.globaleye.com.scppclient.ui.Home">

        <include layout="@layout/activity_app_bar"
            android:id="@+id/include"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Welcome SCPP Home"
                android:padding="10dp"
                android:textAlignment="center"
                android:id="@+id/tvWelcom"
                android:layout_below="@+id/include"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonService"
                android:src="@drawable/services"
                android:background="@null"
                android:layout_below="@+id/include"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="39dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Service"
                android:padding="10dp"
                android:textAlignment="center"
                android:id="@+id/textView"
                android:layout_below="@+id/imageButtonService"
                android:layout_alignLeft="@+id/tvTransaction"
                android:layout_alignStart="@+id/tvTransaction"
                android:layout_alignRight="@+id/tvTransaction"
                android:layout_alignEnd="@+id/tvTransaction" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonProfile"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/profile"
                android:background="@null"
                android:layout_alignBottom="@+id/imageButtonService"
                android:layout_toRightOf="@+id/imageButtontransaction"
                android:layout_toEndOf="@+id/imageButtontransaction"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Profile"
                android:id="@+id/tvProfile"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_below="@+id/imageButtonProfile"
                android:layout_alignLeft="@+id/imageButtonProfile"
                android:layout_alignStart="@+id/imageButtonProfile"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtontransaction"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/transaction"
                android:background="@null"
                android:padding="20dp"
                android:layout_below="@+id/imageButtonService"
                android:layout_marginTop="38dp"
                android:layout_toLeftOf="@+id/imageButtonwallet"
                android:layout_alignLeft="@+id/imageButtonService"
                android:layout_alignStart="@+id/imageButtonService" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Transaction"
                android:padding="10dp"
                android:textAlignment="center"
                android:id="@+id/tvTransaction"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/imageButtonService"
                android:layout_alignEnd="@+id/imageButtonService" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButtonwallet"
                android:src="@drawable/wallet"
                android:background="@null"
                android:padding="10dp"
                android:paddingBottom="200dp"
                android:layout_alignTop="@+id/imageButtontransaction"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Wallet"
                android:id="@+id/tvWallet"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/imageButtontransaction"
                android:layout_alignLeft="@+id/tvProfile"
                android:layout_alignStart="@+id/tvProfile" />


    </RelativeLayout>
</ScrollView>

